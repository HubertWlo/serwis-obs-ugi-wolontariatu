@page
@model CreateOgloszenieModel
@{
    ViewData["Title"] = "Tworzenie og³oszenia";
    if (Request.Cookies.TryGetValue("UserId", out string id) && Request.Cookies.TryGetValue("UserRole", out string rola))
    {
        if (rola == "Wolontariusz")
        {
            Layout = "_Layout_wolontariusz";
        }
        else if (rola == "Pracownik")
        {
            Layout = "_Layout_pracownik";
        }
        else if (rola == "Opiekun")
        {
            Layout = "_Layout_opiekun";
        }
    }
    else
    {
        RedirectToPage("./Index");
    }
}
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
      integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
      crossorigin="" />

<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
        integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
        crossorigin=""></script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<h1>Utwórz nowe og³oszenie pomocy potrzebuj¹cemu</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method ="post">
            <div class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ogloszenie.Nazwa" class="control-label"></label>
                <input asp-for="Ogloszenie.Nazwa" class="form-control" />
                <span asp-validation-for="Ogloszenie.Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ogloszenie.Opis" class="control-label"></label>
                <input asp-for="Ogloszenie.Opis" class="form-control" />
                <span asp-validation-for="Ogloszenie.Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ogloszenie.Data" class="control-label"></label>
                <input asp-for="Ogloszenie.Data" class="form-control" />
                <span asp-validation-for="Ogloszenie.Data" class="text-danger"></span>
            </div>

            <input type="radio" id="selectLocation" name="locationType" value="select" checked>
            <label for="selectLocation">Wybierz z zapisanych lokalizacji</label><br>
            <input type="radio" id="addLocation" name="locationType" value="add">
            <label for="addLocation">Dodaj lokalizacjê œwiadczenia us³ugi</label><br>
            <div id="newLocationDiv" class="nemLocation" style="display: none;">
                <div class="form-group">
                    <label class="control-label">Nie widzisz swojej lokalizacji kliknij poni¿ej</label>
                    <br />
                    <a asp-page="/Lokalizacja/Create" class="btn btn-primary" style="float: left">Dodaj lokalizacje</a>
                    <br />
                </div>
            </div>
            <div id="selectLocationDiv" class="selectLocation" style="display: block;">
                <div class="form-group">
                    @Html.DropDownList("Ogloszenie.LokalizacjaId", (SelectList)ViewBag.LokalizacjaId, "Wybierz lokalizacje", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Utwórz og³oszenie</button>
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <button onclick="goBack()" class="btn btn-primary">Powrót</button>
</div>

<p id="output"></p>

<script>
    function goBack() {
        window.history.back();
    }

    const addLocationRadio = document.getElementById('addLocation');
    const selectLocationRadio = document.getElementById('selectLocation');
    const newLocationInput = document.getElementById('newLocationDiv');
    const locationsSelect = document.getElementById('selectLocationDiv');

    addLocationRadio.addEventListener('change', function () {
        if (addLocationRadio.checked) {
            newLocationInput.style.display = 'block';
            locationsSelect.style.display = 'none';
        }
    });

    selectLocationRadio.addEventListener('change', function () {
        if (selectLocationRadio.checked) {
            newLocationInput.style.display = 'none';
            locationsSelect.style.display = 'block';
        }
    });
</script>