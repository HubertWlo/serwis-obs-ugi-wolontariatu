@page
@model CreateLokalizacjaModel
@{
    ViewData["Title"] = "Tworzenie lokalizacji";
    if (Request.Cookies.TryGetValue("UserId", out string id) && Request.Cookies.TryGetValue("UserRole", out string rola))
    {
        if (rola == "Wolontariusz")
        {
            Layout = "_Layout_wolontariusz";
        }
        else if (rola == "Pracownik")
        {
            Layout = "_Layout_pracownik";
        }
        else if (rola == "Opiekun")
        {
            Layout = "_Layout_opiekun";
        }
    }
    else
    {
        RedirectToPage("./Index");
    }
}
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
      integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
      crossorigin="" />

<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
        integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
        crossorigin=""></script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<h1>Utwórz now¹ lokalizacjê œwiadczenia us³ugi</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method ="post">
            <div class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Lokalizacja.Nazwa" class="control-label"></label>
                <input asp-for="Lokalizacja.Nazwa" class="form-control" />
                <span asp-validation-for="Lokalizacja.Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lokalizacja.Miasto" class="control-label"></label>
                <input asp-for="Lokalizacja.Miasto" class="form-control" />
                <span asp-validation-for="Lokalizacja.Miasto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Lokalizacja.DlugoscGeo" class="form-control" id="DlugoscGeo" />
                <span asp-validation-for="Lokalizacja.DlugoscGeo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Lokalizacja.SzerokoscGeo" class="form-control" id="SzerokoscGeo" />
                <span asp-validation-for="Lokalizacja.SzerokoscGeo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Utwórz lokalizacjê</button>
            </div>
        </form>
        <button onclick="goBack()" class="btn btn-primary">Powrót</button>
    </div>
</div>

<section>
    <div class="row">
        <h4>Zaznacz lokalizacje na mapie</h4>
    </div>
    <div id="map" style="width: 100%; height: 400px;"></div>
</section>

<div>
    <button onclick="goBack()" class="btn btn-primary">Powrót</button>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    function goBack() {
        window.history.back();
    }
    var map = L.map('map').setView([52.2695055242, 21.0584802219], 13);

    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
        attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
    }).addTo(map);


    var popup = L.popup();

    function onMapClick(e) {
        var lat = e.latlng.lat;
        var lng = e.latlng.lng;

        lat = lat.toFixed(6);
        lng = lng.toFixed(6);

        popup
            .setLatLng(e.latlng)
            .setContent("Wspó³rzêdne: <br/>" + lat.toString() + ", " + lng.toString())
            .openOn(map);

        document.getElementById('DlugoscGeo').value = lat;
        document.getElementById('SzerokoscGeo').value = lng;
    }

    map.on('click', onMapClick);
</script>