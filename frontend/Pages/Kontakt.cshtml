<script>
    function goBack() {
        window.history.back();
    }
    var map = L.map('map').setView([52.237810, 20.991805], 13);

    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
        attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
    }).addTo(map);


    var popup = L.popup();

    var marker = L.marker([52.237810, 20.991805]).addTo(map);

